{
  "license": "MIT",
  "workspace": [
    "packages/editor",
    "packages/extension-basic-editor",
    "packages/extension-tables",
    "packages/extension-menu",
    "packages/extension-markdown",
    "packages/extension-odt",
    "packages/extension-yjs",
    "packages/extension-codemirror",
    "packages/extension-server-hono",
    "packages/odt-wasm",
    "packages/test-utils",

    "examples/example-html-generator",
    "examples/example-server-hono",
    "examples/example-vue",
    "examples/example-vue-custom-element",
    "examples/mcptest"
  ],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "types": ["npm:@types/markdown-it@14.1.2"]
  },
  "tasks": {
    "build": "cd packages/odt-wasm && deno task build && cd ../../examples/example-vue && deno task build && cd ../example-vue-custom-element && deno task build && cd ../.."
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.1",
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@1.1.2",
    "asserts": "https://deno.land/std@0.178.0/testing/asserts.ts",

    "prosemirror-state": "npm:prosemirror-state@1.4.3",
    "prosemirror-view": "npm:prosemirror-view@1.40.0",
    "prosemirror-model": "npm:prosemirror-model@1.25.3",
    "prosemirror-transform": "npm:prosemirror-transform@1.10.4",
    "prosemirror-history": "npm:prosemirror-history@1.4.1",

    "markdown-it": "npm:markdown-it@14.1.0",

    "yjs": "npm:yjs@13.6.24",
    "y-protocols": "npm:y-protocols@1.0.6",
    "y-websocket": "npm:y-websocket@2.1.0",
    "lib0": "npm:lib0@0.2.109",
    "orderedmap": "npm:orderedmap@latest",

    "@codemirror/state": "npm:@codemirror/state@6.5.2",
    "@codemirror/view": "npm:@codemirror/view@6.38.1",
    "@codemirror/commands": "npm:@codemirror/commands@6.8.1",
    "@codemirror/search": "npm:@codemirror/search@6.5.10",
    "@codemirror/language": "npm:@codemirror/language@6.11.0",
    "@codemirror/autocomplete": "npm:@codemirror/autocomplete@6.18.6",
    "@codemirror/legacy-modes": "npm:@codemirror/legacy-modes@6.5.0",

    "@codemirror/lang-cpp": "npm:@codemirror/lang-cpp@latest",
    "@codemirror/lang-css": "npm:@codemirror/lang-css@latest",
    "@codemirror/lang-html": "npm:@codemirror/lang-html@latest",
    "@codemirror/lang-php": "npm:@codemirror/lang-php@latest",
    "@codemirror/lang-sql": "npm:@codemirror/lang-sql@latest",
    "@codemirror/lang-xml": "npm:@codemirror/lang-xml@latest",
    "@codemirror/lang-javascript": "npm:@codemirror/lang-javascript@6.2.3",
    "@codemirror/lang-java": "npm:@codemirror/lang-java@latest",
    "@codemirror/lang-json": "npm:@codemirror/lang-json@latest",
    "@codemirror/lang-lezer": "npm:@codemirror/lang-lezer@latest",
    "@codemirror/lang-markdown": "npm:@codemirror/lang-markdown@latest",
    "@codemirror/lang-python": "npm:@codemirror/lang-python@latest",
    "@codemirror/lang-rust": "npm:@codemirror/lang-rust@latest",
    "@codemirror/lang-wast": "npm:@codemirror/lang-wast@latest",

    "thememirror": "npm:thememirror@2.0.1"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "prefer-const", "no-unused-vars"]
    }
  },
  "fmt": {
    "singleQuote": true
  },
  "nodeModulesDir": "auto"
}
